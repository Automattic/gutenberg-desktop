{
	"name": "gutenberg-desktop",
	"version": "1.3.0",
	"description": "Desktop Gutenberg without WordPress",
	"homepage": "https://github.com/Automattic/gutenberg-desktop",
	"repository": {
		"url": "https://github.com/Automattic/gutenberg-desktop"
	},
	"main": "app/index.js",
	"scripts": {
		"start": "electron ./app/index.js",
		"start-editor": "NODE_ENV=development webpack --mode development --watch --progress --config ./webpack.config.js ",
		"build-editor": "NODE_ENV=production webpack --mode production --progress --config ./webpack.config.js",
		"devstart": "NODE_ENV=development electron ./app/index.js",
		"pack": "electron-builder --dir",
		"dist": "electron-builder -ml",
		"pub": "electron-builder -ml --publish onTagOrDraft",
		"postinstall": "electron-builder install-app-deps"
	},
	"author": "Automattic",
	"license": "GPL-2.0-or-later",
	"dependencies": {
		"@automattic/isolated-block-editor": "^2.2.0",
		"@wordpress/blocks": "^11.0.0",
		"@wordpress/data": "^6.0.0",
		"electron": "13.1.7",
		"electron-context-menu": "^3.1.1",
		"lodash": "^4.17.21",
		"markdown-it": "^12.1.0",
		"path": "^0.12.7",
		"turndown": "^7.1.1"
	},
	"devDependencies": {
		"@babel/core": "^7.14.8",
		"@babel/preset-env": "^7.14.8",
		"@babel/preset-react": "^7.14.5",
		"@emotion/babel-plugin": "^11.3.0",
		"@types/eslint": "^7.28.0",
		"@types/lodash": "^4.14.171",
		"@types/qs": "^6.9.7",
		"@types/react-dom": "^17.0.9",
		"@wordpress/babel-preset-default": "^6.3.1",
		"@wordpress/dependency-extraction-webpack-plugin": "^3.2.1",
		"@wordpress/prettier-config": "^1.1.0",
		"@wordpress/scripts": "^17.1.0",
		"autoprefixer": "^10.3.1",
		"babel-loader": "^8.2.2",
		"babel-plugin-emotion": "^11.0.0",
		"babel-plugin-inline-json-import": "^0.3.2",
		"copy-webpack-plugin": "^9.0.1",
		"css-loader": "^6.2.0",
		"electron-builder": "^22.11.7",
		"electron-updater": "^4.3.9",
		"eslint": "^7.31.0",
		"eslint-config-wpcalypso": "^6.1.0",
		"eslint-plugin-react": "^7.24.0",
		"eslint-plugin-wpcalypso": "^5.0.0",
		"html-webpack-plugin": "^5.3.2",
		"mini-css-extract-plugin": "^2.1.0",
		"node-sass": "^6.0.1",
		"postcss": "^8.3.6",
		"postcss-cssnext": "^3.1.0",
		"postcss-loader": "^6.1.1",
		"precss": "^4.0.0",
		"sass-loader": "^12.1.0",
		"style-loader": "^3.2.1",
		"webpack": "^5.47.1",
		"webpack-cli": "^4.7.2"
	},
	"build": {
		"directories": {
			"app": "app"
		},
		"appId": "com.automattic.gutenberg-desktop",
		"productName": "Gutenberg Desktop",
		"mac": {
			"category": "public.app-category.developer-tools",
			"publish": [
				"github"
			]
		},
		"linux": {
			"publish": [
				"github"
			]
		},
		"asar": true,
		"extraResources": [
			"app/preload.js"
		]
	}
}
