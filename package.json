{
	"name": "wordberg",
	"version": "1.0.0",
	"description": "Desktop Gutenberg without WordPress",
	"homepage": "https://github.com/Automattic/wordberg",
	"repository": {
		"url": "https://github.com/Automattic/wordberg"
	},
	"main": "app/index.js",
	"scripts": {
		"start": "electron ./app/index.js",
		"start-editor": "NODE_ENV=development webpack --mode development --watch --progress --config ./webpack.config.js ",
		"build-editor": "NODE_ENV=production webpack --mode production --progress --config ./webpack.config.js",
		"devstart": "NODE_ENV=development electron ./app/index.js",
		"pack": "electron-builder --dir",
		"dist": "electron-builder -ml",
		"pub": "electron-builder --publish onTagOrDraft",
		"postinstall": "electron-builder install-app-deps"
	},
	"author": "Automattic",
	"license": "ISC",
	"dependencies": {
		"@wordpress/base-styles": "^3.2.0",
		"@wordpress/block-library": "^2.26.6",
		"@wordpress/format-library": "^1.25.5",
		"electron": "^11.0.3",
		"electron-context-menu": "^2.3.0",
		"lodash": "^4.17.20",
		"markdown-it": "^12.0.2",
		"redux-undo": "^1.0.1",
		"tinymce": "^5.6.1",
		"turndown": "^7.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.12.9",
		"@babel/plugin-proposal-class-properties": "^7.12.1",
		"@babel/plugin-proposal-decorators": "^7.12.1",
		"@babel/plugin-proposal-export-namespace-from": "^7.12.1",
		"@babel/plugin-proposal-function-sent": "^7.12.1",
		"@babel/plugin-proposal-json-strings": "^7.12.1",
		"@babel/plugin-proposal-numeric-separator": "^7.12.7",
		"@babel/plugin-proposal-object-rest-spread": "^7.12.1",
		"@babel/plugin-syntax-dynamic-import": "^7.8.3",
		"@babel/plugin-syntax-import-meta": "^7.10.4",
		"@babel/preset-env": "^7.12.7",
		"@babel/preset-react": "^7.12.7",
		"@types/classnames": "^2.2.11",
		"@types/eslint": "^7.2.6",
		"@types/lodash": "^4.14.165",
		"@types/qs": "^6.9.5",
		"@types/react-dom": "^17.0.0",
		"@wordpress/babel-preset-default": "^4.19.0",
		"@wordpress/prettier-config": "^0.4.0",
		"@wordpress/scripts": "^12.5.0",
		"autoprefixer": "^10.0.4",
		"babel-loader": "^8.2.2",
		"babel-plugin-inline-json-import": "^0.3.2",
		"copy-webpack-plugin": "^6.3.2",
		"css-loader": "^5.0.1",
		"electron-builder": "^22.9.1",
		"electron-updater": "^4.3.5",
		"eslint": "^7.14.0",
		"eslint-config-wpcalypso": "^6.1.0",
		"eslint-plugin-react": "^7.21.5",
		"eslint-plugin-wpcalypso": "^5.0.0",
		"html-webpack-plugin": "^4.5.0",
		"mini-css-extract-plugin": "^1.3.2",
		"node-sass": "^5.0.0",
		"postcss-cssnext": "^3.1.0",
		"postcss-loader": "^4.1.0",
		"precss": "^4.0.0",
		"sass-loader": "^10.1.0",
		"style-loader": "^2.0.0",
		"webpack": "^4.42.0",
		"webpack-cli": "^4.2.0"
	},
	"build": {
		"directories": {
			"app": "app"
		},
		"appId": "com.automattic.wordberg",
		"productName": "Wordberg",
		"mac": {
			"category": "public.app-category.developer-tools",
			"publish": [ "github" ]
		},
		"linux": {
			"publish": [ "github" ]
		},
		"asar": true,
		"extraResources": [
			"app/preload.js"
		]
	}
}
