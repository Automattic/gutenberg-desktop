{
	"name": "gutenberg-desktop",
	"version": "1.0.0",
	"description": "Desktop Gutenberg without WordPress",
	"homepage": "https://github.com/Automattic/gutenberg-desktop",
	"repository": {
		"url": "https://github.com/Automattic/gutenberg-desktop"
	},
	"main": "app/index.js",
	"scripts": {
		"start": "electron ./app/index.js",
		"start-editor": "NODE_ENV=development webpack --mode development --watch --progress --config ./webpack.config.js ",
		"build-editor": "NODE_ENV=production webpack --mode production --progress --config ./webpack.config.js",
		"devstart": "NODE_ENV=development electron ./app/index.js",
		"pack": "electron-builder --dir",
		"dist": "electron-builder -ml",
		"pub": "electron-builder -ml --publish onTagOrDraft",
		"postinstall": "electron-builder install-app-deps"
	},
	"author": "Automattic",
	"license": "GPL-2.0-or-later",
	"dependencies": {
		"electron": "^11.3.0",
		"electron-context-menu": "^2.5.0",
		"isolated-block-editor": "automattic/isolated-block-editor#be4797e4809fb50d804a631c2ec269afda331d73",
		"lodash": "^4.17.21",
		"markdown-it": "^12.0.4",
		"path": "^0.12.7",
		"reakit-utils": "^0.15.1",
		"redux-undo": "^1.0.1",
		"turndown": "^7.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.13.1",
		"@babel/preset-env": "^7.13.5",
		"@babel/preset-react": "^7.12.13",
		"@types/classnames": "^2.2.11",
		"@types/eslint": "^7.2.6",
		"@types/lodash": "^4.14.168",
		"@types/qs": "^6.9.5",
		"@types/react-dom": "^17.0.1",
		"@wordpress/babel-preset-default": "^5.0.1",
		"@wordpress/dependency-extraction-webpack-plugin": "^3.0.1",
		"@wordpress/prettier-config": "^1.0.1",
		"@wordpress/scripts": "^13.0.3",
		"autoprefixer": "^10.2.4",
		"babel-loader": "^8.2.2",
		"babel-plugin-inline-json-import": "^0.3.2",
		"copy-webpack-plugin": "^7.0.0",
		"css-loader": "^5.1.0",
		"electron-builder": "^22.9.1",
		"electron-updater": "^4.3.5",
		"eslint": "^7.20.0",
		"eslint-config-wpcalypso": "^6.1.0",
		"eslint-plugin-react": "^7.22.0",
		"eslint-plugin-wpcalypso": "^5.0.0",
		"html-webpack-plugin": "^5.2.0",
		"mini-css-extract-plugin": "^1.3.9",
		"node-sass": "^5.0.0",
		"postcss": "^8.2.6",
		"postcss-cssnext": "^3.1.0",
		"postcss-loader": "^5.0.0",
		"precss": "^4.0.0",
		"sass-loader": "^11.0.1",
		"style-loader": "^2.0.0",
		"webpack": "^5.24.2",
		"webpack-cli": "^4.5.0"
	},
	"build": {
		"directories": {
			"app": "app"
		},
		"appId": "com.automattic.gutenberg-desktop",
		"productName": "Gutenberg Desktop",
		"mac": {
			"category": "public.app-category.developer-tools",
			"publish": [
				"github"
			]
		},
		"linux": {
			"publish": [
				"github"
			]
		},
		"asar": true,
		"extraResources": [
			"app/preload.js"
		]
	}
}
