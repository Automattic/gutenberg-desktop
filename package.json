{
  "name": "wordberg",
  "version": "1.0.0",
  "description": "Desktop Gutenberg without WordPress",
  "main": "index.js",
  "scripts": {
    "start": "electron ./app/index.js",
    "build": "NODE_ENV=development webpack --progress --colors --config ./webpack.config.js --mode=development",
    "dev": "NODE_ENV=development webpack-dev-server --progress --colors --config ./webpack.config.js --port 3312 --mode development",
    "devstart": "NODE_ENV=development electron ./app/index.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "Automattic",
  "license": "ISC",
  "dependencies": {
    "@frontkom/gutenberg-js": "^3.0.1",
    "electron-context-menu": "^0.11.0",
    "jquery": "1.12.4",
    "moment": "^2.24.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "tinymce": "^5.0.0",
    "turndown": "^5.0.3"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "babel-preset-react-app": "^7.0.0",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^2.1.0",
    "electron": "^4.0.4",
    "electron-builder": "^20.38.5",
    "electron-react-devtools": "^0.5.3",
    "eslint": "^5.13.0",
    "eslint-config-wpcalypso": "^4.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-wpcalypso": "^4.0.2",
    "html-webpack-plugin": "^3.2.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14"
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "build": {
    "directories": {
      "app": "app"
    },
    "appId": "com.automattic.wordberg",
    "productName": "Wordberg",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "asar": true
  },
  "eslintConfig": {
    "env": {
      "mocha": true,
      "node": true
    },
    "extends": [
      "wpcalypso/react"
    ],
    "rules": {
      "max-len": 0,
      "wpcalypso/jsx-classname-namespace": 0,
      "wpcalypso/import-no-redux-combine-reducers": 0
    },
    "parserOptions": {
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      }
    }
  }
}
